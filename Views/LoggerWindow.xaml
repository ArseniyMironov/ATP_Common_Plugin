<Window x:Class="ATP_Common_Plugin.Views.LoggerWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:ATP_Common_Plugin.Views"
             mc:Ignorable="d"
             Title="Plugin Logger" Height="450" Width="800" 
             WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Основная область логов -->
        <ListView x:Name="LogListView" Grid.Row="0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Time" Width="120" DisplayMemberBinding="{Binding Timestamp, StringFormat={}{0:HH:mm:ss.fff}}"/>
                    <GridViewColumn Header="Level" Width="80">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Level}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Document" Width="150" DisplayMemberBinding="{Binding DocumentName}"/>
                    <GridViewColumn Header="Message" Width="400" DisplayMemberBinding="{Binding Message}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Панель управления -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Clear" Margin="5" Padding="10,2" Click="ClearButton_Click"/>
            <Button Content="Close" Margin="5" Padding="10,2" Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
